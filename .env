# Copy to .env locally (don't commit .env to git). On Render set these as Environment Variables.
MC_HOST=play.example.com
MC_PORT=25565
MC_USERNAME=KeepAliveBot
MC_PASSWORD=          # leave empty for offline-mode servers
MC_VERSION=           # leave empty to auto-detect (e.g. 1.20.4)

MIN_ACTION_DELAY=5000
MAX_ACTION_DELAY=20000
RECONNECT_DELAY=8000

CHAT_PROBABILITY=0.08
GREETINGS=hi|hello|anyone here?|keeping server alive

FOLLOW_START_DISTANCE=30
FOLLOW_STOP_DISTANCE=35
FOLLOW_TIMEOUT_MS=30000

